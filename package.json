{
    "name": "root",
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "bootstrap": "lerna bootstrap --use-workspaces",
        "build": "lerna exec --parallel -- babel --root-mode upward src -d lib --ignore **/*.story.js,**/*.spec.js",
        "coverage": "jest --coverage",
        "deploy-storybook": "storybook-to-ghpages",
        "dev": "start-storybook -p 5555",
        "lint:js": "eslint . --ext .js --ignore-pattern lib --ignore-pattern node_modules",
        "lint:styles": "stylelint './src/**/*.js'",
        "lint": "yarn lint:js && yarn lint:styles",
        "prettier": "prettier --write \"**/*.{js,json,md,yml}\"",
        "lerna-publish": "lerna publish",
        "test": "yarn build && yarn lint && yarn coverage",
        "unit": "jest"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,json,md,yml}": [
            "prettier --write",
            "git add"
        ]
    },
    "devDependencies": {
        "@babel/cli": "^7.2.3",
        "@babel/core": "^7.4.0",
        "@babel/preset-env": "^7.4.2",
        "@babel/preset-react": "^7.0.0",
        "@storybook/react": "^5.0.3",
        "@storybook/storybook-deployer": "^2.8.1",
        "babel-core": "7.0.0-bridge.0",
        "babel-jest": "^24.5.0",
        "babel-loader": "^8.0.5",
        "babel-plugin-styled-components": "^1.10.0",
        "eslint": "4.19.1",
        "eslint-config-get-off-my-lawn-prettier": "^1.0.0",
        "husky": "^1.3.1",
        "jest": "^24.5.0",
        "jest-styled-components": "^6.3.1",
        "lerna": "^3.13.1",
        "lint-staged": "^8.1.5",
        "prettier": "^1.16.4",
        "react": "^16.8.5",
        "react-dom": "^16.8.5",
        "react-test-renderer": "^16.8.5",
        "styled-components": "^4.1.3",
        "stylelint": "9.8.0",
        "stylelint-config-get-off-my-lawn": "2.0.0",
        "stylelint-config-styled-components": "0.1.1",
        "stylelint-processor-styled-components": "1.5.0"
    }
}
